<% provide :title, 'Вход' %>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-6 offset-md-3 auth">
      <div class="card card-block">
        <h2 class="card-title auth__title">Вход</h2>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <fieldset class="form-group">
            <%= f.email_field :email, class: 'form-control form-control-lg',
                  autofocus: true, placeholder: 'E-mail', required: true %>
          </fieldset>

          <fieldset class="form-group">
            <%= f.password_field :password, class: 'form-control form-control-lg',
                  autocomplete: 'off', placeholder: 'Пароль', required: true %>
          </fieldset>

          <% if devise_mapping.rememberable? %>
            <div class="form-check">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>

          <%= f.submit 'Войти', class: 'btn btn-success btn-lg btn-block' %>
        <% end %> <!-- End of form -->

        <%= render 'devise/shared/links' %>
      </div> <!-- End of .card -->
    </div> <!-- End of .auth -->
  </div>
</div>
