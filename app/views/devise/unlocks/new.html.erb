<% provide :title, 'Разблокировка аккаунта' %>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-6 offset-md-3 auth">
      <div class="card card-block">
        <h2 class="auth__title">Разблокировка аккаунта</h2>

        <%= form_for(resource, as: resource_name, url: unlock_path(resource_name),
                               html: { method: :post }) do |f| %>
          <%= devise_error_messages! %>

          <fieldset class="form-group">
            <%= f.email_field :email, class: 'form-control form-control-lg',
                  autofocus: true, placeholder: 'E-mail', required: true %>
          </fieldset>

          <%= f.submit 'Разблокировать аккаунт по E-mail', class: 'btn btn-success btn-lg btn-block' %>
        <% end %> <!-- End of form -->

        <%= render 'devise/shared/links' %>
      </div> <!-- End of .card -->
    </div> <!-- End of .auth -->
  </div>
</div>
