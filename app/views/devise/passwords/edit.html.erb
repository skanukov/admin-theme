<% provide :title, 'Выбор нового пароля' %>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-6 offset-md-3 auth">
      <div class="card card-block">
        <h2 class="auth__title">Выбор нового пароля</h2>

        <%= form_for(resource, as: resource_name, url: password_path(resource_name),
                               html: { method: :put }) do |f| %>
          <%= devise_error_messages! %>
          <%= f.hidden_field :reset_password_token %>

          <fieldset class="form-group">
            <%= f.password_field :password, class: 'form-control form-control-lg',
                  autofocus: true, autocomplete: 'off', placeholder: 'Новый пароль', required: true %>
            <% if @minimum_password_length %>
              <small class="text-muted">Минимум <%= @minimum_password_length %> символов</small>
            <% end %>
          </fieldset>

          <fieldset class="form-group">
            <%= f.password_field :password_confirmation, class: 'form-control form-control-lg',
                  autocomplete: 'off', placeholder: 'Подтвердите новый пароль', required: true %>
          </fieldset>

          <%= f.submit 'Изменить пароль', class: 'btn btn-success btn-lg btn-block' %>
        <% end %> <!-- End of form -->

        <%= render 'devise/shared/links' %>
      </div> <!-- End of .card -->
    </div> <!-- End of .auth -->
  </div>
</div>
