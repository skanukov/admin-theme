<% provide :title, 'Регистрация' %>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-6 offset-md-3 auth">
      <div class="card card-block">
        <h2 class="card-title auth__title">Регистрация</h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

          <fieldset class="form-group">
            <%= f.email_field :email, class: 'form-control form-control-lg',
                  autofocus: true, placeholder: 'E-mail', required: true %>
          </fieldset>

          <fieldset class="form-group">
            <%= f.password_field :password, class: 'form-control form-control-lg',
                  autocomplete: 'off', placeholder: 'Пароль', required: true %>
            <% if @minimum_password_length %>
              <small class="text-muted">Минимум <%= @minimum_password_length %> символов</small>
            <% end %>
          </fieldset>

          <fieldset class="form-group">
            <%= f.password_field :password_confirmation, class: 'form-control form-control-lg',
                  autocomplete: 'off', placeholder: 'Подтвердите пароль', required: true %>
          </fieldset>

          <%= f.submit 'Зарегистироваться', class: 'btn btn-success btn-lg btn-block' %>
        <% end %> <!-- End of form -->

        <%= render 'devise/shared/links' %>
      </div> <!-- End of .card -->
    </div> <!-- End of .auth -->
  </div>
</div>
