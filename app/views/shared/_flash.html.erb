<% if flash.present? %>
  <div class="flash">
    <% flash.each do |flash_type, message| %>
      <div class="alert <%= bootstrap_class_for flash_type %> alert-dismissible fade in" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <%= message %>
      </div>
    <% end %>
  </div>
<% end %>
